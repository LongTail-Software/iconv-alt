{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "windows-msvc-release",
      "displayName": "Ninja MSVC x64 Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "environment": {
        "CMAKE_GENERATOR_PLATFORM": "",
        "Platform": "",
        "VSCMD_ARG_TGT_ARCH": "",
        "VSCMD_DEFAULT_TGT_ARCH": ""
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Win64 MSVC Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_STANDARD": "17",
        "BUILD_SHARED_LIBS": "ON"
      },
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings": {
          "RemoteMachineName": "Windows11-ARM64"
        }
      }
    }
  ],

  "buildPresets": [
    {
      "name": "windows-msvc-release-build",
      "configurePreset": "windows-msvc-release"
    }
  ],

  "testPresets": [
    {
      "name": "windows-msvc-release-test",
      "configurePreset": "windows-msvc-release",
      "output": { "outputOnFailure": true }
    }
  ]
}
